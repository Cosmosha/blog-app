
<div class='row g-0 border rounded overflow-hidden flex-md-row gap-4 mb-4 shadow-sm h-md-250 position-relative'>
  <div class='col-auto d-none d-lg-block'>
    <%= image_tag(@user.photo) %>
  </div>
  <div class='col p-4 d-flex flex-column position-static'>
    <h2 class='card-title'><%= @user.name %></h2>
    <div class='d-flex mt-4 justify-content-end'>
        <p class= 'text-right align-right justify-content-end'> Number of Posts: <%= @user.posts_counter %></p>
    </div>
  </div>
</div>
<div class='row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 align-center'>
  <h2>Bio</h2>
  <p><%= @user.bio %></p>
</div>

<div class="container d-flex pb-3 justify-content-end">
  <%= link_to 'Create new post', new_user_post_path((@user)), class: 'btn btn-success' %>
</div>


<% if @user.posts.any? %>
  <div class='container border rounded'>
    <h2>Recent Posts</h2>
    <% @user.posts.limit(3).each do |post| %>
      <div class='container border rounded'>
        <h3><%= link_to  post.title , user_post_path(@user.id, post.id) ,class: 'h3' %></h3>
        <p><%= post.text %></p>
          <div class='d-flex justify-content-end'>
        <h5>Likes <%= post.likes_counter %></h5> &nbsp;
        <h5>Comments <%= post.comments_counter %><h5>
      </div>
      </div>
        <% end %>
  </div>
  <br/>
    <div class="d-flex justify-content-center mb-3">
        <%= link_to 'See all posts', user_posts_path(@user.id), class:'btn btn-primary center' %>
    </div>

  <% else %>
    <p>No Post Found</p>


<% end %>