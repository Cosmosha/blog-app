<h1>Show All Posts</h1>
<div class='row g-0 border rounded overflow-hidden flex-md-row gap-4 mb-4 shadow-sm h-md-250 position-relative'>
  <div class='col-auto d-none d-lg-block'>
    <%= image_tag(@user.photo) %>
  </div>
  <div class='col p-4 d-flex flex-column position-static'>
    <h2 class='card-title'><%= @user.name %></h2>
    <div class='d-flex mt-4 justify-content-end'>
        <p class= 'text-right align-right justify-content-end'> Number of Posts: <%= @user.posts_counter %></p>
    </div>
  </div>
</div>

<div  class='container border rounded'>
  <h2>List of Posts</h2>
  <% @posts.each do |post| %>
    <div  class='container border rounded'>
     <h3><%= link_to  post.title , user_post_path(@user.id, post.id) ,class: 'h3' %></h3>
      
      <p><%= post.text %></p>
      <div class='d-flex justify-content-end'>
          <h5>Likes <%= post.likes_counter %></h5> &nbsp;
          <h5>Comments <%= post.comments_counter %><h5>
        </div>
      <hr />
      <div>
        <% post.recent_comments.each do |comment| %>
          <div class='d-flex pb-2 justify-content-start gap-2'>
            <strong class='pl-2'><%= comment.author.name %>: </strong>
            <p><%= comment.text %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div class= 'd-flex justify-content-center '>
  <nav aria-label="Page navigation example">
    <ul class="pagination">
      <li class="page-item">
        <a class="page-link" href="#" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
      <li class="page-item"><a class="page-link" href="#">1</a></li>
      <li class="page-item"><a class="page-link" href="#">2</a></li>
      <li class="page-item"><a class="page-link" href="#">3</a></li>
      <li class="page-item">
        <a class="page-link" href="#" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    </ul>
  </nav>
</div>